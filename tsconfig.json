// tsconfig.json
{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "lib": ["ES2021", "DOM"], // Добавьте DOM, так как Playwright работает с DOM
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true, // Полезно, если вы импортируете JSON
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
      // Укажите здесь пути к вашим тестовым файлам, если они не покрываются **/*.ts
      // "tests/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }